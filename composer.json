{
    "name": "lumite-studios/action",
    "description": "An action class.",
    "type": "library",
    "require": {
        "php": "^8.0",
        "illuminate/auth": "^8.0|^9.0",
        "illuminate/support": "^8.0|^9.0",
        "illuminate/validation": "^8.0|^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.17",
        "pestphp/pest": "^1.18",
        "nunomaduro/larastan": "^0.7.12"
    },
    "autoload": {
        "psr-4": {
            "LumiteStudios\\Action\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LumiteStudios\\Action\\Tests\\": "tests"
        }
    },
    "scripts": {
		"test": [
			"@putenv XDEBUG_MODE=develop",
			"pest"
		],
		"test-coverage": [
			"@putenv XDEBUG_MODE=coverage",
			"pest --coverage"
		],
		"stan": [
			"phpstan analyse"
		],
		"stan-debug": [
			"phpstan analyse --debug"
		]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
